#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "üî¨ RUNNING MANDATORY DATA INTEGRITY CHECK BEFORE PUSH..."
echo "This prevents pushing broken data that could cause $500,000 Medicare fines"
echo ""

# Run the integrity agent
node disaster-integrity-agent.mjs

# Check the exit code
if [ $? -ne 0 ]; then
  echo ""
  echo "‚ùå DATA INTEGRITY CHECK FAILED!"
  echo "Push blocked due to critical data issues"
  echo "Fix the issues above before pushing"
  exit 1
fi

# Run root cause analysis if issues found
node data-integrity-root-cause-analyzer.mjs

echo ""
echo "‚úÖ Data integrity verified - safe to push"